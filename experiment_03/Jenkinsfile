// experiment_03/Jenkinsfile

pipeline {
    agent any

    environment {
        SONAR_QUALITY_GATE_TIMEOUT = 300
        PYTHONPATH = "${WORKSPACE}/experiment_03/src"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/2045663/mlops-journey-2025.git'
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                // 在项目根目录创建虚拟环境并安装依赖
                bat 'python -m venv venv && venv\\Scripts\\activate.bat && pip install -r requirements.txt -i https://mirrors.aliyun.com/pypi/simple/'
            }
        }

        stage('Run Tests & Generate Coverage') {
            steps {
                dir('experiment_03') {
                    // 需要启动MLflow
                    bat '..\\venv\\Scripts\\activate.bat && pytest test/ --cov=src --cov-report=xml:coverage.xml -v'
                }
            }
        }

        stage('SonarQube Analysis') {
			steps {
				dir('experiment_03') {
					withSonarQubeEnv('SonarQube Local') {
						// 激活虚拟环境并运行 sonar-scanner（使用 properties 文件中的配置）
						bat '..\\venv\\Scripts\\activate.bat && sonar-scanner -D"sonar.qualitygate.wait=true" -D"sonar.qualitygate.timeout=%SONAR_QUALITY_GATE_TIMEOUT%"'
					}
				}
			}
		}

        stage('Quality Gate') {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        success {
            echo '✅ 构建与扫描成功！'
        }
        failure {
            echo '❌ 构建或扫描失败！'
        }
    }
}